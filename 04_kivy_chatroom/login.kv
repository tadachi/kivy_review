ScreenManager:
    Screen:
        name: 'login'

        BoxLayout:
            orientation: 'vertical'

            GridLayout:
                Label:
                    text: 'Server:'

                TextInput:
                    id: server
                    text: '127.0.0.1'

                Label:
                    text: 'Nickname:'

                TextInput:
                    id: nickname
                    text: 'Kivy'

            Button:
                text: 'Connect'
                on_press: root.current = 'chatroom

    Screen:
        name: 'desktop'

        ScrollView:
            effect_cls: ScrollEffect

            Image:
                id: desktop
                nocache: True
                on_touch_down: app.send_click(args[1])
                size: self.texture_size
                size_hint: (None, None)
